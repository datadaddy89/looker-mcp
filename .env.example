# Looker Conversational Analytics MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Looker Configuration
# Your Looker instance URL (e.g., https://company.looker.com)
LOOKER_BASE_URL=https://labelboxdata.cloud.looker.com

# Looker API credentials (Admin → Users → Edit Keys → API3 Keys)
LOOKER_CLIENT_ID=your_looker_client_id_here
LOOKER_CLIENT_SECRET=your_looker_client_secret_here

# SSL verification (set to "true" in production, "false" for development)
LOOKER_VERIFY_SSL=false

# Google Cloud Configuration
# Your Google Cloud project ID with Conversational Analytics API enabled
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Optional: Path to service account key file (if not using gcloud auth)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
